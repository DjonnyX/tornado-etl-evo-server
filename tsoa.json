{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/**/*Controller.ts"
  ],
  "spec": {
    "securityDefinitions": {
      "clientAccessToken": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "basePath": "/api/v1",
    "outputDirectory": ".",
    "specVersion": 3
  },
  "routes": {
    "basePath": "/api/v1",
    "routesDir": "src",
    "authenticationModule": "./src/authentication.ts"
  }
}